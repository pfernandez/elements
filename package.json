{
  "name": "elements-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "npm --prefix packages/elements run -s typecheck",
    "build:types": "npm --prefix packages/elements run -s build:types && npm --prefix packages/elements-3d run -s build:types",
    "test": "npm --prefix packages/elements test",
    "test:coverage": "npm --prefix packages/elements run -s test:coverage",
    "3d:typecheck": "npm --prefix packages/elements-3d run -s typecheck",
    "3d:build:types": "npm --prefix packages/elements-3d run -s build:types",
    "3d:test": "npm --prefix packages/elements-3d test",
    "3d:test:coverage": "npm --prefix packages/elements-3d run -s test:coverage",
    "fetch:x3dom-src": "npm --prefix packages/elements-3d run -s fetch:x3dom-src",
    "3d:fetch:x3dom-src": "npm --prefix packages/elements-3d run -s fetch:x3dom-src",
    "pkg:report": "node scripts/package-report.js packages/elements",
    "3d:pkg:report": "node scripts/package-report.js packages/elements-3d"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
