  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfernandez/elements.git"
  },
  "author": "Paul Fernandez",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.10",
    "eslint": "^7.32.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
